{
  "manifest_version": 3,
  "name": "Resolar",
  "description": "Resolar 확장 프로그램입니다.",
  "version": "1.0.0",
  "action": {
    "default_title": "Resolar",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "notifications"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/content.js"
      ]
    }
  ],
  "commands": {
    "save-page": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "현재 페이지를 저장합니다."
    }
  }
}