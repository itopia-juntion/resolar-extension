{
  "manifest_version": 3,
  "name": "Resolar",
  "description": "Resolar 확장 프로그램입니다.",
  "version": "1.0.0",
  "action": {
    "default_title": "Resolar",
    "default_popup": "popup/popup.html"
  },
  "options_page": "options/options.html",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "downloads",
    "debugger"
  ]
}